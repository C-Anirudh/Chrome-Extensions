{
    "manifest_version": 2,
    "name": "Definition and Speech",
    "version": "1.0",
    "description": "Search meaning of words and hear the words !",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "tts"
    ]
}